    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.disease.ResultFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/resultImage"
            android:layout_width="match_parent"
